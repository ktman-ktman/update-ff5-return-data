{
    // Editor
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    // Python
    "python.languageServer": "Pylance",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "flake8.args": [
        "--max-line-length",
        "88",
        "--ignore",
        "E202,W503,W504"
    ],
}